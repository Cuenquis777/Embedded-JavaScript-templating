    <main>
        <section>
            <h2>Llista de Notificacions</h2>
            <ul class="Notificacions-list">
                <% data.notificacions.forEach(notificacio => { %>
                    <li class="product-item">
                        <strong><%= notificacio.id %></strong>
                        <span><%= notificacio.user_id %></span>
